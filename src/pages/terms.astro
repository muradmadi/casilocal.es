---
import Layout from '../layouts/Layout.astro';

const seoTitle = "Terms of Use";
const seoDescription = "Legal agreement and operational disclaimers for using the CasiLocal directory.";
---

<Layout title={seoTitle} description={seoDescription}>
  <main class="w-full max-w-3xl mx-auto px-6 py-12 md:py-20 space-y-16">
    
    <!-- Header -->
    <section class="space-y-6 text-center">
      <h1 class="font-display font-black text-6xl md:text-8xl tracking-tighter leading-[0.9] text-[var(--color-ink)]">
        Terms of Use
      </h1>
      <p class="font-display italic text-2xl md:text-3xl text-[var(--color-ink)] leading-tight max-w-2xl mx-auto">
        Last Updated: January 2026
      </p>
    </section>

    <div class="border-b-2 border-dotted border-[var(--color-inc)]/20 w-full"></div>

    <!-- Terms Content -->
    <article class="prose prose-lg prose-headings:font-display prose-headings:font-bold prose-headings:uppercase prose-p:font-body text-[var(--color-ink)] max-w-none">
        
        <section>
            <h2>1. The Agreement</h2>
            <p>
                Welcome to <strong>CasiLocal</strong>. By accessing this website, you agree to these terms. If you do not agree, do not use the directory.
            </p>
